{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "noEmit": false,
    "noEmitOnError": true,
    "paths": {
      "features/*": ["features/*"],
      "store": ["app/store"],
      "api": ["api/api"],
      "styles": ["styles"],
      "common/*": ["common/*"],
      "utils/*": ["common/utils/*"],
      "constants/*": ["common/constants/*"],
      "components/*": ["common/components/*"]
    },
    "jsx": "react-jsx"
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "babel.config.json",
    "webpack.config.js"
  ]
}
