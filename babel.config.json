{
  "presets": [
    [
      "next/babel",
      {
        "preset-env": {},
        "transform-runtime": {},
        "styled-jsx": {},
        "class-properties": {}
      }
    ]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "extensions": [".ts", ".tsx", ".jsx", ".js", ".json"],
        "alias": {
          "@features/*": ["./src/features/*"],
          "@store": ["./src/app/store"],
          "@api": ["./src/api/api"],
          "@hooks/*": ["./src/common/hooks/*"],
          "@utils/*": ["./src/common/utils/*"],
          "@constants/*": ["./src/common/constants/*"],
          "@components/*": ["./src/components/*"]
        }
      }
    ]
  ]
}
